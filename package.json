{
  "name": "verified-permissions-authorizer-monorepo",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "build": "pnpm -r --parallel build",
    "lint": "pnpm -r lint && pnpm go:lint",
    "typecheck": "pnpm -r typecheck",
    "format": "pnpm -r format",
    "format:write": "pnpm -r format:write && pnpm format:go",
    "clean": "pnpm -r clean",
    "changeset": "changeset",
    "release": "changeset version && pnpm -r build",
    "test": "pnpm -r test && pnpm go:test",
    "validate:avp": "npx -y avp-validate --schema infra/authorizer/schema.yaml --policyDir infra/authorizer/policies --mode error",
    "go:lint": "bash -lc 'if command -v go >/dev/null 2>&1; then go vet ./...; else echo \"[skip] go not installed; skipping go vet\"; fi'",
    "go:test": "bash -lc \"if command -v go >/dev/null 2>&1; then go test ./... -coverprofile=coverage.out -covermode=count; else echo '[skip] go not installed; skipping Go tests locally'; fi\"",
    "format:go": "bash -lc 'gofmt -s -w .'"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "yaml": "^2.5.1"
  }
}
