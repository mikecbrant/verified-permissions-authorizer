{
  "name": "verified-permissions-authorizer-monorepo",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "build": "pnpm -r --parallel build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "format": "pnpm -r format",
    "format:write": "pnpm -r format:write",
    "clean": "pnpm -r clean",
    "changeset": "changeset",
    "release": "changeset version && pnpm -r build"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8"
  }
}
