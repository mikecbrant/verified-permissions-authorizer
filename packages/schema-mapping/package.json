{
  "name": "schema-mapping",
  "version": "0.0.1",
  "private": true,
  "description": "Cedar schema superset merger and request mapping utilities",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --outDir dist --rootDir src --declaration true --module ES2022 --target ES2023 --moduleResolution Bundler src/index.ts",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit --module ES2022 --target ES2023 --moduleResolution Bundler --lib ES2023,DOM src/merge.ts src/mapping.ts",
    "lint": "eslint \"src/**/*.ts\" --max-warnings 0",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "format": "prettier --check .",
    "format:write": "prettier --write ."
  },
  "dependencies": {
    "yaml": "^2.5.1",
    "@types/aws-lambda": "^8.10.146"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vitest": "^2.0.5",
    "@vitest/coverage-v8": "^2.0.5",
    "@typescript/native-preview": "7.0.0-dev.20250828.1"
  },
  "vitest": {
    "testTimeout": 30000,
    "coverage": {
      "provider": "v8",
      "all": false,
      "include": [
        "src/**"
      ],
      "thresholds": {
        "lines": 100,
        "functions": 100,
        "branches": 100,
        "statements": 100
      }
    }
  }
}
